# Deep Agent System Environment Configuration

# =============================================================================
# LLM Configuration
# =============================================================================
# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4000

# Alternative LLM providers (uncomment if using)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================
# ChromaDB Configuration (Vector Store)
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_COLLECTION_NAME=deep_agent_knowledge
CHROMADB_PERSIST_DIRECTORY=./data/chromadb

# Neo4j Configuration (Graph Database)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# =============================================================================
# Agent Configuration
# =============================================================================
# Prompt Directory
PROMPT_DIR=./prompts

# Agent Settings
AGENT_TIMEOUT=300
MAX_RETRIES=3
ENABLE_AGENT_LOGGING=true

# =============================================================================
# RAG Configuration
# =============================================================================
# Embedding Model
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSION=1536

# Retrieval Settings
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_RETRIEVAL_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# Vector Store Settings
VECTOR_STORE_ENABLED=true
GRAPH_STORE_ENABLED=true

# =============================================================================
# CLI Configuration
# =============================================================================
# Rich CLI Settings
CLI_THEME=dark
CLI_SYNTAX_HIGHLIGHTING=true
CLI_SHOW_PROGRESS=true
CLI_MAX_WIDTH=120

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/deep_agent_system.log
ENABLE_DEBUG_LOGGING=false

# =============================================================================
# Workflow Configuration
# =============================================================================
# LangGraph Settings
WORKFLOW_TIMEOUT=600
WORKFLOW_MAX_STEPS=50
ENABLE_WORKFLOW_CHECKPOINTS=true
WORKFLOW_CHECKPOINT_DIR=./data/checkpoints

# =============================================================================
# Security Configuration
# =============================================================================
# API Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=60

# Security Settings
ENABLE_INPUT_VALIDATION=true
MAX_INPUT_LENGTH=10000
SANITIZE_OUTPUTS=true

# =============================================================================
# Development Configuration
# =============================================================================
# Development Mode
DEBUG_MODE=false
DEVELOPMENT_MODE=false
ENABLE_HOT_RELOAD=false

# Testing Configuration
TEST_MODE=false
MOCK_EXTERNAL_APIS=false