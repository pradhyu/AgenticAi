# Deep Agent System Environment Configuration

# =============================================================================
# LLM Configuration
# =============================================================================
# LLM Provider Selection
# Options: openai, anthropic, openrouter, lambda_ai, together_ai, huggingface, ollama, custom
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_BASE_URL=  # Optional: Custom OpenAI-compatible endpoint
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4000

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_BASE_URL=  # Optional: Custom endpoint
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=4000

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=openai/gpt-4-turbo-preview
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_SITE_URL=  # Optional: Your site URL for OpenRouter
OPENROUTER_APP_NAME=Deep Agent System
OPENROUTER_TEMPERATURE=0.7
OPENROUTER_MAX_TOKENS=4000

# Lambda AI Configuration
LAMBDA_AI_API_KEY=your_lambda_ai_api_key_here
LAMBDA_AI_MODEL=hermes-2-pro-llama-3-8b
LAMBDA_AI_BASE_URL=https://api.lambdalabs.com/v1
LAMBDA_AI_ENDPOINT=  # Optional: Specific endpoint URL
LAMBDA_AI_TEMPERATURE=0.7
LAMBDA_AI_MAX_TOKENS=4000

# Together AI Configuration
TOGETHER_AI_API_KEY=your_together_ai_api_key_here
TOGETHER_AI_MODEL=meta-llama/Llama-2-70b-chat-hf
TOGETHER_AI_BASE_URL=https://api.together.xyz/v1
TOGETHER_AI_TEMPERATURE=0.7
TOGETHER_AI_MAX_TOKENS=4000

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=microsoft/DialoGPT-large
HUGGINGFACE_BASE_URL=https://api-inference.huggingface.co
HUGGINGFACE_TEMPERATURE=0.7
HUGGINGFACE_MAX_TOKENS=4000

# Ollama Configuration (Local)
OLLAMA_MODEL=llama2
OLLAMA_HOST=http://localhost:11434
OLLAMA_BASE_URL=  # Optional: Custom base URL
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=4000

# Custom Provider Configuration
CUSTOM_MODEL=your_custom_model_name
CUSTOM_API_KEY=your_custom_api_key
CUSTOM_BASE_URL=https://your-custom-endpoint.com/v1
CUSTOM_TEMPERATURE=0.7
CUSTOM_MAX_TOKENS=4000
# Extra headers as JSON: {"Authorization": "Bearer token", "Custom-Header": "value"}
CUSTOM_EXTRA_HEADERS={}
# Extra parameters as JSON: {"top_p": 0.9, "frequency_penalty": 0.1}
CUSTOM_EXTRA_PARAMS={}

# =============================================================================
# Database Configuration
# =============================================================================
# ChromaDB Configuration (Vector Store)
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_COLLECTION_NAME=deep_agent_knowledge
CHROMADB_PERSIST_DIRECTORY=./data/chromadb

# Neo4j Configuration (Graph Database)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# =============================================================================
# Agent Configuration
# =============================================================================
# Prompt Directory
PROMPT_DIR=./prompts

# Agent Settings
AGENT_TIMEOUT=300
MAX_RETRIES=3
ENABLE_AGENT_LOGGING=true

# =============================================================================
# RAG Configuration
# =============================================================================
# Embedding Model
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSION=1536

# Retrieval Settings
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_RETRIEVAL_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# Vector Store Settings
VECTOR_STORE_ENABLED=true
GRAPH_STORE_ENABLED=true

# =============================================================================
# CLI Configuration
# =============================================================================
# Rich CLI Settings
CLI_THEME=dark
CLI_SYNTAX_HIGHLIGHTING=true
CLI_SHOW_PROGRESS=true
CLI_MAX_WIDTH=120

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/deep_agent_system.log
ENABLE_DEBUG_LOGGING=false

# =============================================================================
# Workflow Configuration
# =============================================================================
# LangGraph Settings
WORKFLOW_TIMEOUT=600
WORKFLOW_MAX_STEPS=50
ENABLE_WORKFLOW_CHECKPOINTS=true
WORKFLOW_CHECKPOINT_DIR=./data/checkpoints

# =============================================================================
# Security Configuration
# =============================================================================
# API Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=60

# Security Settings
ENABLE_INPUT_VALIDATION=true
MAX_INPUT_LENGTH=10000
SANITIZE_OUTPUTS=true

# =============================================================================
# Development Configuration
# =============================================================================
# Development Mode
DEBUG_MODE=false
DEVELOPMENT_MODE=false
ENABLE_HOT_RELOAD=false

# Testing Configuration
TEST_MODE=false
MOCK_EXTERNAL_APIS=false